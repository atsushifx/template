# EditorConfig is awesome: https://EditorConfig.org
#
# @(#) : default settings for code of contests

# top-most EditorConfig file
##
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# default character-set
charset = utf-8

# default indent style
indent_style = tab
indent_size = tab
tab_width = 4


### Settings by ext type
# no ext: general files settings
[**.]
indent_style = space
indent_size = 2
tab_width = 2

### Programming Languages

### Documents
# markdown
[**.md]
indent_size = tab
tab_width = 2
indent_style = space

### Shell Scripts
# shell script
[**.{sh,bash,zsh}]
indent_style = space
indent_size = 2
tab_width = 2

### Settings
# json, yml
[**.{json,yml}]
tab_width = 4
indent_size = tab
indent_style = tab

# ini, toml
[**.{ini,toml}]
indent_style = tab
indent_size = tab
tab_width = 4

# rc files
[**rc]
indent_style = space
indent_size = tab
tab_width = 2

### Git config
# for git config
[**.git*]
indent_style = tab
indent_size = tab
tab_width = 4

[**/git/*]
indent_style = tab
indent_size = tab
tab_width = 4
